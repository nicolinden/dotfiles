{
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "editor.foldingImportsByDefault": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "database-client.autoSync": true,
  "editor.fontSize": 16,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.iconTheme": "catppuccin-frappe",
  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "expand",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.experimentalTernaries": true,
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript", "html"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "vim.useSystemClipboard": true,
  "vim.leader": "<C-a>",
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.commentLine"],
      "when": "editorTextFocus && !editorReadonly"
    }
  ],
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml",
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
  "xmlTools.splitAttributes": false, // optional, keeps attributes in one line
  "xmlTools.format.useSingleQuote": false,
  "xmlTools.format.preserveNewLines": true,
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark+]": {
      "rules": {
        "property.mandatory:xml": {
          "bold": true
        },
        "string.i18n:xml": {
          "italic": true
        }
      }
    },
    "[Default Light+]": {
      "rules": {
        "property.mandatory:xml": {
          "bold": true
        },
        "string.i18n:xml": {
          "italic": true
        }
      }
    },
    "[Default High Contrast]": {
      "rules": {
        "property.mandatory:xml": {
          "bold": true
        },
        "string.i18n:xml": {
          "italic": true
        }
      }
    }
  },
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": "#4fa3b1",
  "vim.statusBarColors.insert": "#e74c3c",
  "vim.statusBarColors.visual": "#e07b3e",
  "vim.statusBarColors.visualLine": "#f27855",
  "vim.statusBarColors.visualBlock": "#9a8cde",
  "vim.statusBarColors.replace": "#e32e56",
  "vim.statusBarColors.commandline": "#74c5fc",
  "vim.statusBarColors.inactive": "#1d1f27",
  "vim.statusBarColors.commandlineInProgress": "#9c27b0", // Deep Violet
  "vim.statusBarColors.searchInProgressMode": "#64b5f6", // Light Blue (clear visibility)
  "vim.statusBarColors.easyMotionMode": "#ffb74d", // Warm Amber (distinct enough)
  "vim.statusBarColors.easyMotionInputMode": "#f6c5b5", // Soft Peach (not too harsh)
  "vim.statusBarColors.surroundInputMode": "#80deea", // Aqua Blue (refreshing contrast)

  "workbench.colorCustomizations": {
    "statusBar.background": "#4fa3b1",
    "statusBar.noFolderBackground": "#4fa3b1",
    "statusBar.debuggingBackground": "#4fa3b1",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "editor.linkedEditing": true,
  "workbench.activityBar.location": "hidden",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "MesloLGS NF",
  "workbench.colorTheme": "Dark Vision"
}
